<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userProfileContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="5dp" >

    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/layout_background_color"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_background_color"
            android:orientation="vertical" >



                <ImageView
                    android:id="@+id/profileImageUPA"
                    android:layout_width="wrap_content"
                    android:minHeight="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:maxHeight="300dp"
                    android:adjustViewBounds="true"
                    android:background="@color/image_background_color"
                    android:cropToPadding="true"
                    android:onClick="loadImage"
                    android:padding="3dp"
                    android:src="@drawable/abc_ab_bottom_solid_light_holo" />

                <LinearLayout
                    android:id="@+id/xpBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="xpBarButton"
                    android:background="@color/black"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/levelTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:background="#00000000"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="Level 1"
                        android:textColor="@color/light_green"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/xpProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp" />

                    <TextView
                        android:id="@+id/xpTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:background="#00000000"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textColor="@color/yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profilePastEventsBadgesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <Button
                        android:id="@+id/profileButton4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button"
                        android:fontFamily="sans-serif-condensed"
                        android:onClick="onClick"
                        android:text="Past Events"
                        android:textColor="@color/button_text_color"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/profileButton5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button"
                        android:fontFamily="sans-serif-condensed"
                        android:onClick="onClick"
                        android:text="Badges\n(0)"
                        android:textColor="@color/button_text_color"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/aboutTitlePA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="About User:"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/friendProfileInnerLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/profileAboutTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/top_bottom_border"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="This is your friend&apos;s profile."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/profileButton1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_button"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="onClick"
                    android:text=""
                    android:textColor="@color/button_text_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/profileButton2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_button"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="onClick"
                    android:text=""
                    android:textColor="@color/button_text_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/profileButton3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_button"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="onClick"
                    android:text=""
                    android:textColor="@color/button_text_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/profileEditButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_offcolorbutton"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="onClick"
                    android:text="Edit Profile"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>