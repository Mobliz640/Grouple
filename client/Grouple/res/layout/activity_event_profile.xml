<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventProfileContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="5dp" >

    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:layout_margin="0dp"
        android:background="@color/layout_background_color"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layout_background_color"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/userProfileInnerLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/profileImageUPA"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:background="@color/image_background_color"
                    android:cropToPadding="true"
                    android:maxWidth="200dp"
                    android:onClick="loadImage"
                    android:padding="3dp"
                    android:src="@drawable/abc_ab_bottom_solid_light_holo" />

                <LinearLayout
                    android:id="@+id/userProfileAgeLocationLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/profileInfoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="left"
                        android:maxLength="999"
                        android:maxLines="6"
                        android:padding="5dp"
                        android:text="Stuff."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/aboutTitlePA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:padding="5dp"
                android:text="About Event:"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/friendProfileInnerLayout2"
                android:layout_width="match_parent"
               	android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/profileAboutTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/top_bottom_border"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="This is your friend&apos;s profile."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/profileButton1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text=""
                android:textColor="@color/button_text_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/profileButton2"
                android:layout_width="match_parent"
                 android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text=""
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/profileButton3"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text=""
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />
            
            <Button
                android:id="@+id/itemListButton"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text="Item Checklist"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/profileEditButton"
                android:layout_width="match_parent"
                  android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text="Edit Profile"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>