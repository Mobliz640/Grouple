<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="5dp" >
    
    <ScrollView
        android:id="@+id/scrollViewEntire"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
    	 android:background="@color/background_color"
        android:padding="0dp" >

         
    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@color/background_color"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/emailNotificationsTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:text="Email Notifications:"
            android:textColor="@color/white" />

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >

            <Switch
                android:id="@+id/friendSwitch"
                android:layout_width="fill_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="New Friend Requests" />
            
            <Switch
                android:id="@+id/groupSwitch"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="New Group Requests" />
            
            <Switch
                android:id="@+id/eventSwitch"
                android:layout_margin="5dp"
                android:gravity="top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Event Requests" />
            
            <Switch
                android:id="@+id/upcomingSwitch"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="One of your Events becomes Upcoming" />

        </LinearLayout>
        
         <TextView
            android:id="@+id/accountSettingsTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:text="Account Settings:"
            android:textColor="@color/white" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
              >
            
             <Button
	        android:id="@+id/ChangeEmailButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"
	        android:background="@drawable/button_border"
	        android:fontFamily="sans-serif-condensed"
	        android:onClick="changeEmailButton"
	        android:text="Change Email Address"
	        android:layout_margin="5dp"
	        android:textColor="@color/button_text_color"
	        android:textSize="12sp" />
             
             <Button
	        android:id="@+id/ChangePasswordButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"
	        android:background="@drawable/button_border"
	        android:fontFamily="sans-serif-condensed"
	        android:onClick="changePasswordButton"
	        android:text="Change Password"
	        android:textColor="@color/button_text_color"
	        android:layout_margin="2.5dp"
	        android:textSize="12sp" />
             
              <Button
	        android:id="@+id/DeleteAccountButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"
	        android:background="@drawable/button_border"
	        android:fontFamily="sans-serif-condensed"
	        android:onClick="deleteAccountButton"
	        android:text="Delete Account"
	        android:textColor="@color/button_text_color"
	        android:layout_margin="2.5dp"
	        android:textSize="12sp" />
             
         </LinearLayout>
		   
	   </LinearLayout>
	
	  
	 	</ScrollView>

 </LinearLayout>
