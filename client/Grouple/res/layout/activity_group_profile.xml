<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	android:id="@+id/groupProfileContainer"
   	tools:context="cs460.grouple.grouple.GroupProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical" >

   <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayoutTitle3"
    	android:background="@color/layout_background_color"
        android:orientation="vertical" >

       <LinearLayout
        android:id="@+id/linearLayoutTitleR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@color/layout_background_color"
        android:orientation="horizontal" >
        
       <ImageView
           android:id="@+id/profileImageGPA"
           android:layout_width="130dp"
           android:layout_height="130dp"
           android:layout_gravity="left"
           android:background="@drawable/border"
           android:cropToPadding="true"
           android:padding="4dp"
           android:src="@drawable/abc_ab_bottom_solid_light_holo" />
       
       <TextView
	  	    android:id="@+id/aboutTextViewGPA"
	  	    android:layout_width="match_parent"
           	android:textColor="@color/text_color"
           	android:fontFamily="sans-serif-condensed"
	  	    android:layout_height="wrap_content"
   			android:layout_marginLeft="5dp"
   			android:layout_gravity="center"
   			android:gravity="center"
   			android:padding="5dp"
	  	    android:text="Stuff."
	  	    android:textAppearance="?android:attr/textAppearanceMedium"
            android:maxLength="999"
            android:minLines="6"
            android:maxLines="6"
	  	    android:textSize="14sp" />
       </LinearLayout>
      
       <TextView
        android:id="@+id/createIntroMessage1"
   		android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
       android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content"
		android:padding="5dp"
        android:gravity="left"
        android:text="@string/bioMessage"
        android:background="@color/black"
        android:textColor="@color/white" />
       
	  	<TextView
	  	    android:id="@+id/bioTextViewGPA"
	  	    android:layout_width="match_parent"
           	android:textColor="@color/text_color"
           	android:fontFamily="sans-serif-condensed"
	  	    android:layout_height="wrap_content"
	  	    android:background="@drawable/top_bottom_border"
   			android:layout_marginBottom="5dp"
   			android:padding="5dp"
	  	    android:text="This is the group profile. Write a bio for the group here."
	  	    android:textAppearance="?android:attr/textAppearanceMedium"
            android:maxLength="999"
            android:minLines="3"
            android:maxLines="3"
	  	    android:textSize="14sp" />

       <LinearLayout
           android:id="@+id/linearLayoutTitle2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/layout_background_color"
           android:gravity="center"
           android:orientation="horizontal" >
  
       </LinearLayout>

       <Button
           android:id="@+id/membersButtonGPA"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:background="@drawable/button_border"
           android:onClick="startListActivity"
           android:text="Members (0)"
           android:textColor="@color/button_text_color"
           android:textSize="20sp" />
  
   </LinearLayout>
   
   <LinearLayout
        android:id="@+id/linearLayoutTitle3"
   		android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/layout_background_color" >

        <Button
            android:id="@+id/editGroupProfilePhotoButton"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_border"
            android:onClick="startGroupEditActivity"
            android:text="Edit Group"
            android:textColor="@color/button_text_color"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
