<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/editGroupContainer"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="cs460.grouple.grouple.ProfileEditActivity" >

	
	    <ImageView
	        android:id="@+id/groupPhoto"
	        android:contentDescription="Group photo."
	        android:layout_weight="2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"
	        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />
	
	    <Button
	        android:id="@+id/editGroupPhotoButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"
	        android:background="@drawable/button_border"
	        android:fontFamily="sans-serif-condensed"
	        android:onClick="startEditProfileActivity"
	        android:text="Edit Photo"
	        android:textColor="@color/button_text_color"
	        android:textSize="12sp" />
	
	
	
		<TextView
			android:id="@+id/nameLabelTextViewEPA"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Group Name:"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color" />
		
	
	
	    <EditText
	        android:id="@+id/nameEditTextEPA"
			android:layout_width="fill_parent"
			android:inputType="textCapSentences"
			android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_color" />
	
	    <TextView
	        android:id="@+id/aboutLabelTextViewEPA"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="About:"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/text_color" />
	
	    <EditText
	        android:id="@+id/aboutEditTextEPA"
	      	android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:inputType="textCapSentences"
	        android:textColor="@color/text_color"
	        android:textColorHint="@color/text_color" />

	    
	    <TextView
	        android:id="@+id/publicLabelTextViewEPA"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Group privacy settings:"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/text_color" />
	    
	    
	    <LinearLayout

    android:id="@+id/publicButtonContainer"
    android:background="@color/background_color"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    tools:context="cs460.grouple.grouple.ProfileEditActivity" >
    
	         <RadioButton
	             android:id="@+id/publicButton"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_weight="2"
	             android:onClick="radio"
	             android:text="Public" />

	    <RadioButton
	        android:id="@+id/privateButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="Private" />
	        
	        </LinearLayout>
	    
	   
	  	    <Button
	        android:id="@+id/manageGroupButton"
			android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_border"
	        android:onClick="manageGroup"
	        android:layout_weight="1"
	        android:layout_marginBottom="5dp"
	        android:text="Manage Members"
	        android:textColor="@color/button_text_color" />
	   
	
	  	<TextView
			android:id="@+id/errorTextViewEPA"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@android:color/holo_red_dark"
			android:visibility="invisible"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	    	
	    <Button
	        android:id="@+id/submitButtonEPA"
			android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_border"
	        android:onClick="submitButton"
	        android:layout_weight="1"
	        android:layout_marginBottom="5dp"
	        android:text="Submit Changes"
	        android:textColor="@color/button_text_color" />
	

 </LinearLayout>