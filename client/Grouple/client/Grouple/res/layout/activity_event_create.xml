
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventCreateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/background_color"
    android:orientation="vertical" >
    
    
<ScrollView
        android:id="@+id/scrollViewEntire"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
    	android:background="@color/layout_background_color"
        android:padding="0dp" >

    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@color/layout_background_color"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/eventName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords"
            android:hint="Give your event a name"
            android:maxLength="40"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_background_color"
            android:focusable="false"
            android:ems="10"
            android:gravity="left"
            android:hint="Select a category that most fits your event"
            android:maxLength="10"
            android:maxLines="1"
            android:onClick="selectCategoryButton"
            android:minLines="1"
            android:padding="5dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color" />
        
        <TextView
            android:id="@+id/createbioMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:text="About Event"
            android:textColor="@color/white" />
        
        <EditText
            android:id="@+id/eventBio"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/layout_background_color"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:hint="Tell people about this event"
            android:maxLength="255"
            android:maxLines="2"
            android:minLines="2"
            android:padding="5dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color" /><TextView android:id="@+id/createIntroMessage" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:text="Date and Time" android:background="@color/black" android:padding="5dp" android:textColor="@color/white" /><LinearLayout android:id="@+id/publicButtonContainer" android:background="@color/background_color" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" tools:context="cs460.grouple.grouple.UserEditActivity">
    
        
        <EditText android:id="@+id/startTimeButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="2" android:background="@color/layout_background_color" android:gravity="left" android:hint="Start Date" android:focusable="false" android:maxLength="255" android:maxLines="1" android:onClick="selectStartDateButton" android:minLines="1" android:padding="5dp" android:layout_marginRight="10dp" android:textColor="@color/text_color" android:textColorHint="@color/hint_text_color" />

	   <EditText android:id="@+id/endTimeButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="2" android:background="@color/layout_background_color" android:gravity="left" android:hint="End Date" android:maxLength="255" android:maxLines="1" android:focusable="false" android:onClick="selectEndDateButton" android:minLines="1" android:padding="5dp" android:textColor="@color/text_color" android:textColorHint="@color/hint_text_color" />
	        
	        </LinearLayout>
	        <TextView android:id="@+id/TextView02" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:background="@color/black" android:gravity="left" android:padding="5dp" android:text="Location" android:textColor="@color/white" /><EditText
                android:id="@+id/locationEditTextECA"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                           android:inputType="textCapWords"
                android:layout_weight="2"
                android:background="@color/layout_background_color"
                android:ems="10"
                android:gravity="left"
                android:hint="Where will this event take place?"
                android:maxLength="255"
                android:maxLines="1"
                android:minLines="1"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_text_color" />
<TextView android:id="@+id/TextView03" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@color/black" android:gravity="left" android:padding="5dp" android:text="Size of event" android:textColor="@color/white" /><LinearLayout android:id="@+id/minmaxContainer" android:background="@color/background_color" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">
    
        <EditText
            android:id="@+id/minPartButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@color/layout_background_color"
            android:gravity="left"
            android:hint="Minimum (Optional)"
            android:inputType="number"
            android:maxLength="255"
            android:padding="5dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color" />

	   <EditText android:id="@+id/maxPartButton" 
	       android:layout_width="fill_parent" 
	       android:layout_height="wrap_content" 
	       android:layout_weight="2" 
	       android:background="@color/layout_background_color" 
	       android:gravity="left" 
	       android:hint="Maximum (Optional)" 
	       android:inputType="number" 
	       android:maxLength="255" 
	       android:padding="5dp" 
	       android:textColor="@color/text_color" 
	       android:textColorHint="@color/hint_text_color" />
	        
	        </LinearLayout>
	        
	        <Button android:id="@+id/toBringButton" 
	            android:layout_width="match_parent" 
	            android:layout_height="50sp" 
	            android:layout_marginTop="5dp" 
	            android:layout_marginBottom="5dp"
	            android:background="@drawable/button_border" 
	            android:onClick="toBringButton" 
	            android:text="Add Items To Bring" 
	            android:textColor="@color/button_text_color" 
	            android:textSize="20sp" />
	        
	        <Button android:id="@+id/confirmButton" 
	            android:layout_width="match_parent" 
	            android:layout_height="50sp" 
	            android:layout_marginTop="5dp" 
	            android:background="@drawable/button_border" 
	            android:onClick="createEventButton" 
	            android:text="Confirm Create Event" 
	            android:textColor="@color/button_text_color" 
	            android:textSize="20sp" />
    
    </LinearLayout>
    
    </ScrollView>
    

</LinearLayout>
